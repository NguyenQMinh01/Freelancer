  <header class="header-area header-sticky">
    <div class="container" style="z-index: 2;">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav"  data-turbo= "false">
                    <!-- ***** Logo Start ***** -->
                    
        
                        <a href="/" class="logo">
                            <%= image_tag 'https://www.f-cdn.com/assets/main/en/assets/freelancer-logo-old.svg' %>
                        </a>
                      
                   
                    <!-- ***** Logo End ***** -->
                    
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li><%= link_to 'Home', root_path%></li>
                        <li><%= link_to 'Dashboard', dashboard_path%></li>
