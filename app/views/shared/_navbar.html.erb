  <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="/" class="logo">
                        <%= image_tag 'https://www.f-cdn.com/assets/main/en/assets/freelancer-logo-old.svg' %>
                    </a>
                    <!-- ***** Logo End ***** -->

                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li><%= link_to 'Home', root_path%></li>
                        <li><%= link_to 'Dashboard', dashboard_path%></li>
                        <% if (!user_signed_in?) %>
                            <li><%= link_to "Login", new_user_session_path, class: "button is-success" %></li>
                            <li><%= link_to "Sign Up", new_user_registration_path, class: "button is-danger" %></li>
                        <% else %>
                            <div class="navbar-item has-dropdown is-hoverable" style="">
                                <a class="navbar-link">
                                    <figure class="image is-24x24 m-r-5">
                                        <%= image_tag avatar_url(current_user), class: "is-rounded" %>
                                    </figure>
                                    <%= current_user.full_name %>
                                </a>
                                <div class="navbar-dropdown">
                                    <%= link_to 'Dashboard', dashboard_path, class: "navbar-item" %>
                                    <%= link_to "Setting account", edit_user_registration_path, class: "navbar-item" %>
                                    <%= link_to 'Profile', user_show_path(current_user.id), class: "navbar-item" %>

                                    <hr class="navbar-divider">
                                    <%= link_to "Log out", destroy_user_session_path, method: :delete ,  class: "navbar-item" %>
                                </div> 
                            </div>
                        <% end %>
                        <li><%= link_to 'Post gig', new_gig_path %></li>
                    </ul>   
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
    <% if (user_signed_in?) && !current_page?(root_path) && !current_page?("/gigs/#{params[:id]}")%>       
        <br/>
        <%= render 'shared/navbar1' %>
    <% end %>
  </header>

