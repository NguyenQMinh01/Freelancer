    padding-right: 0px;
}
.nav li{
    padding-right: 0px;
}
.navbar-item {
    &.has-dropdown {
      .navbar-dropdown {
        display: none;
      }
      &.is-active {
        .navbar-dropdown {
          display: block;
        }
      }
   }
}
