<div class="left-navbar">
    <div id="left_menu" class="modal">
        <a href="/" class="logo">
            <%= image_tag 'https://www.f-cdn.com/assets/main/en/assets/freelancer-logo-old.svg', style: "width: 80%" %>
        </a>
        <li><%= link_to 'Home', root_path%></li>
        <li><%= link_to 'Dashboard', dashboard_path%></li>
