        <% else %>
            <div class="navbar-item is-hoverable" style="min-width: 200px">
                <span class="navbar-link inline-block" style="" onclick="mobile_dropdown('mobile-user')" >
                    <figure class="image is-24x24 m-r-5 avatar <%= current_user.status ? "online" : "offline"%>" style="vertical-align: middle;">
                        <%= image_tag avatar_url(current_user), class: "is-rounded" %>
                    </figure>
                    <a style="vertical-align: middle; color: white;"><%= current_user.full_name %></a>
                </span> 
                <ul style="display: none" id="mobile-user">
                    <li><%= link_to 'Dashboard', dashboard_path%></li>
                    <li><%= link_to "Setting account", edit_user_registration_path%></li>
                    <li><%= link_to 'Profile', user_show_path(current_user.id)%></li>
                    <hr class="navbar-divider" style="color: black;border: 1px solid;">
                    <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                </ul>
            </div>
        <% end %>
        
        <% if (user_signed_in?) && !current_page?(root_path) && !current_page?("/gigs/#{params[:id]}") && !current_page?(search_path) %>       
            <hr style="color: white"/>
            <div class="sub-nav" data-turbo= false>
                <a href="<%= contacts_path %>"><li>Contact</li></a>
                <a href="<%= conversations_path %>"><li style="margin-top: 0px;">Messages</li></a>
                
                <div class="navbar-item" style="min-width: 200px">
                    <span class="navbar-link inline-block" style="" onclick="mobile_dropdown('mobile-buying')" >
                        <a style="">(Freelancer) Buying ></a>
                    </span> 
                    <ul style="display: none; margin-left: 20px;" id="mobile-buying">
                        <p><%= link_to 'Freelancer Post Request', new_request_path%></p>
                        <p><%= link_to 'Manage Request', requests_path%></p>

                        <p><a>Contact</a></p>
                        <hr class="dropdown-divider">
                        <p><a>Report an issue</a></p>
                    </ul>
                </div>
                <div class="navbar-item" style="min-width: 200px">
                    <span class="navbar-link inline-block" style="" onclick="mobile_dropdown('mobile-request')" >
                        <a style="">(Freelancer) Requests ></a>
                    </span> 
                    <ul style="display: none; margin-left: 20px;" id="mobile-request">
                        <p><%= link_to 'Active Request', all_requests_path%></p>
                        <p><%= link_to 'Offers sent', my_offers_path%></p>
                        <hr class="dropdown-divider">
                        <p><a>Report an issue</a></p>
                    </ul>
                </div>
                <div class="navbar-item" style="min-width: 200px">
                    <span class="navbar-link inline-block" style="" onclick="mobile_dropdown('mobile-order')" >
                        <a style="">Orders ></a>
                    </span> 
                    <ul style="display: none; margin-left: 20px;" id="mobile-order">
                        <p><%= link_to 'Selling Orders', selling_orders_path%></p>
                        <hr class="dropdown-divider">
                        <p><%= link_to 'Buying Orders', buying_orders_path%></p>
                    </ul>
                </div>
            </div>
        <% end %>
    </div>
</div>
<script>

    function show_menu(){
        var menu_trigger = document.getElementById("menu-trigger");
        var left_menu = document.getElementById("left_menu");
        if (left_menu.style.width != "60%") {
            // left_menu.style.display = 'block';
            left_menu.style.width = "60%";
        } else {
            // left_menu.style.display = 'none';
            left_menu.style.width = "0";
        }
    }
    function mobile_dropdown(id){
        var mobile_dropdown = document.getElementById(id);
        if (mobile_dropdown.style.display != 'block') {
            mobile_dropdown.style.display = 'block';
        } else {
            mobile_dropdown.style.display = 'none';
        }
    }
</script>

