<%- if devise_mapping.omniauthable? %>
    <%= form_for "Sign in with #{OmniAuth::Utils.camelize('facebook')}",
      url: omniauth_authorize_path(resource_name, 'facebook'),
      method: :post,
      data: {turbo: "false"} do |f| %>
        <%= f.submit " Sign in with #{OmniAuth::Utils.camelize('facebook')}",
        class: "button is-link is-hovered is-fullwidth m-t-10 m-b-10" %>
    <% end %>  
<% end %>