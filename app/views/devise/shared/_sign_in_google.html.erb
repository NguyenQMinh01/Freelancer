<%- if devise_mapping.omniauthable? %>
    <%= form_for "Sign in with #{OmniAuth::Utils.camelize('google_oauth2')}",
      url: omniauth_authorize_path(resource_name, 'google_oauth2'),
      method: :post,
      data: {turbo: "false"} do |f| %>
        <%= f.submit "Sign in with #{OmniAuth::Utils.camelize('google')}",
        class: "button is-danger is-hovered is-fullwidth m-t-10 m-b-10" %>
    <% end %>  
<% end %>

