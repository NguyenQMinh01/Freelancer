<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-destop is-6-widescreen">
          <div class="box">

            <div class="field has-text-centered">
              <strong>Sign Up</strong>
            </div>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, data: { turbo: false }) do |f| %>
              
                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :full_name, autofocus: true, autocomplete: "full_name" , class: "input" %>
                </div>


                <div class="form-inputs">
                  <%= f.input :email, autofocus: true,required: true, input_html: { autocomplete: "email" }, class: "input" %>
                </div>
              
                <div class="form-inputs">
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.input :password, autocomplete: "new-password", class: "input" %>
                </div>
              
                <div class="form-inputs">
                  <%= f.input :password_confirmation, autocomplete: "new-password", class: "input " %> <br>
                </div>
              
                <div class="actions">
                  <%= f.submit "Sign up", class: "button is-danger is-fullwidth m-t-10 m-b-10" %>
                </div>
              <% end %>  
              <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

