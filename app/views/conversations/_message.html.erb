<% if message.user.id == user.id%>
    <div class="column is-7 is-offset-5">
        <p class="notification is-primary conversation-message" style="border-radius: 20px;">
            <%= message.content %>
        </p>
    </div>
    <% else %>
    <div class="column is-7">
        <article class="media">
            <div class="media-left">
                <figure class = "image is-32x32">
                    <%= image_tag avatar_url(message.user), class: "is-rounded"%>
                </figure>
            </div> 
            <div class="media-content">
                <p class="notification is-primary conversation-message" style="border-radius: 20px; background-color: deepskyblue;">
                    <%= message.content %>
                </p>
            </div>
        </article>
    </div>
<% end %>