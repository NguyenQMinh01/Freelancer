<% @title="Messages | Freelancer" %>
<section class="section">
    <div class="columns">
    
        <div class="column is-4">
            <nav class="menu">
                <p class="menu-label">
                    Chats
                </p>
                <ul class="menu-list">
                    <% @conversations.each do |conversation|%>
                        <% @client = conversation.sender_id == current_user.id ? conversation.receiver : conversation.sender   %>
                        <%= link_to conversations_detail_path(@client.id) do  %>
                            <li>
                            <article class="message">
                                <div class="message-body">
                                    <div class="media">
                                        <div class="media-left">
                                            <figure class="image is-32x32 m-r-5 avatar online">
                                                <%= image_tag avatar_url(@client), class: "is-rounded"%>
                                            </figure>
                                        </div>                                
                                        <div class="media-content">
                                            <p class="title is-6"><%= @client.full_name %></p>
                                            <p class="subtitle is-7">
                                                <%= (conversation.last_message.user_id == current_user.id ? "You: #{conversation.last_message.content}" : conversation.last_message.content).truncate(18) %>
                                                .<%= time_ago_in_words(conversation.last_message.updated_at.strftime("%b %Y"))%>
                                            </p>
                                        </div>
                                        <!-- <div class="media-right">
                                            <p class="subtitle is-7"><%= conversation.last_message.updated_at.strftime("%b %Y")%></p>
                                        </div> -->
                                    </div>
                                </div>
                            </article>                    
                            </li>
                        <% end %>
                    <% end %>
                    
                </ul>
            </nav>
        </div>

        <div class="column is-8">
            <section class="hero">
                <div class="hero-body">
                    <p class="subtitle has-text-centered">
                        Select a conversion
                    </p>
                </div>
            </section>
        </div>
    </div>
</section>