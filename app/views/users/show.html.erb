<section class="section">
    <div class="container">
        <div class="columns">
            
            <!-- LEFT SIDE -->
            <div class="column is-one-third">
                <div class="columns is-multiline">

                    <!-- Top Card -->
                    <div class="column is-full">
                        <div class="card">

                            <!-- Avatar -->
                            <div class="card-content is-horizontal-center is-flex">
                                <figure class="image is-128x128">
                                    <%= image_tag avatar_url(@user), class: "is-rounded" %>
                                </figure>

                            </div>
                                

                            <div class="card-content">

                            
                                <!-- Upload Button -->
                                <div class="content has-text-centered">
                                    <p class="title is-5"><%= @user.full_name %></p>     
                                </div>
                                <hr class="h-10">
                                
                                <!-- Member -->
                                <article class="media">
                                    <div class = "media-content">Member since</div>
                                    <div class = "media-right">
                                        <strong> <%= @user.created_at.strftime('%b %Y') %> </strong>
                                    </div>
                                </article>
                                <hr class="h-10">
                                
                                <!-- From -->
                                <article class="media" >                    
                                    <div class = "media-content">From </div>
                                        <div class = "media-right">
                                            <strong><%= @user.from %> </strong>
                                    </div>                                                                                                       
                                </article>                                
                                <hr class="h-10">

                                <!-- Online Status -->
                                <article class="media" >  
                                    <div class = "media-content">Online</div>                                  
                                    <div class = "media-right">
                                        <strong> <% if @user.status %> Online <% else %> Offline <% end %> </strong>
                                    </div>                               
                                </article>  

                            </div>
                        </div>
                    </div>

                    <!-- Bottom Card -->
                    <div class="column is-full">
                        <div class="card">
                            <div class="card-content">

                                <!-- About -->     
                                    <article class="media">
                                        <div class = "media-content"> 
                                            <p>
                                                <strong>About Your self </strong>
                                                <br>
                                                <%= @user.about %>
                                            </p>  
                                        </div>
                                                          
                                </article>  
                                <hr class="h-10">

                                <!-- Language -->
                        
                                    <article class="media">
                                        <div class = "media-content"> 
                                        <p>
                                            <strong>Language </strong>
                                            <br>
                                            <%= @user.language %>
                                        </p>  
                                    </div>
                                </article>
                                <hr class="h-10">
                                
                                <!-- Linked Account -->
                                <article class="media"></article>
                                <%= link_to "view freelancer profile", dashboard_path , class: "button is-danger"%>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column">
                <div class="card">
                    <div class = "card-hearder">
                        <div class="card-header-title">Latest Review</div>
                    </div>

                    <!-- Create New Gig -->
                    <div class="card-content">
                        <article class="media">
                            <figure class=" media-left">
                                <p class="image is-64x64">
                                    <%= image_tag avatar_url(@user), class: "is-rounded" %>

                                </p>
                            </figure> 
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <strong>Hello</strong> <br>
                                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Qui saepe ipsam quas ducimus dolore rem corrupti officia, neque perspiciatis et fugiat laudantium laboriosam nemo corporis, quo autem illum quaerat minima?
                                    </p>

                                    <small>10m</small>
                                </div>
                            </div>

                            <div class="media-right">
                                <span class="star-review"><i class="fa fa-star"></i>5.0</span>
                            </div>
                        </article>
                    </div>

                    <!-- Sample Gig -->
                    <div class="column is-one-third has-text-centered"></div>
                    
                </div>
            </div>
            
        </div>
    </div>
</section>